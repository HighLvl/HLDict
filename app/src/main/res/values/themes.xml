<resources xmlns:tools="http://schemas.android.com/tools">
    <color name="colorFragmentBackground">#8DEAEAEA</color>
    <color name="colorAppBar">#8DEAEAEA</color>
    <!-- Base application theme. -->
    <style name="Theme.OnScreenDictionary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Custom color. -->
        <item name="android:textColorHighlight">@color/teal_700</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:listDivider</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="background">@color/white</item>
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>
</resources>